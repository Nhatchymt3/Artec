
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">


            @using (Html.BeginForm("Edit", "AlbumPhoto", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div style="float:left">
                    <a href="javascript:void(0)" onclick="insertPicture()" class="btn btn-control" >Thêm Ảnh</a>
                </div>
                <input type="submit" value="Lưu" class="btn btn-warning" style="float:right; margin-bottom:10px" />

                if (Model != null)
                {
                    <div class="col-xs-12" id="content">
                        @using Outsourcing.Core
                        @model Labixa.Areas.Admin.ViewModel.AlbumPhotoFormModel
                        @using Outsourcing.Core.Extensions;
                        @section scripts{
                            <script src="~/Content/ckeditor/ckeditor.js"></script>
                            <script src="~/Content/ckeditor/config.js"></script>
                        }
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id)

                        @Html.HiddenFor(model => model.ProductCategoryId)

                        @Html.HiddenFor(model => model.Name)

                        @Html.HiddenFor(model => model.IsPublic)

                        @Html.HiddenFor(model => model.Position)

                        @Html.HiddenFor(model => model.IsHomePage)

                        @Html.HiddenFor(model => model.Price)
                        @Html.HiddenFor(model => model.MetaDescription)
                        @Html.HiddenFor(model => model.MetaKeywords)
                        @Html.HiddenFor(model => model.MetaTitle)
                        @Html.HiddenFor(model => model.Description)
                        @Html.HiddenFor(model => model.Price)
                        @Html.HiddenFor(model => model.OldPrice)
                        @Html.HiddenFor(model => model.Content)
                        @Html.HiddenFor(model => model.Slug)
                        @Html.HiddenFor(model => model.ProductAttributeMappings)
                        @Html.HiddenFor(model => model.Id1)
                        @Html.HiddenFor(model => model.Id2)
                        @Html.HiddenFor(model => model.Id3)
                        @Html.HiddenFor(model => model.Slug)


                        @Html.EditorFor(model => model.ProductPictureMappings)
                    </div>

                }
                else
                {
                    <h1>Không tìm thấy sản phẩm!</h1>
                }
                <div class="separator"></div>
                <div style="float: left; margin-top: 10px">
                    <a href="javascript:void(0)" onclick="insertPicture()" class="btn btn-control">Thêm Ảnh</a>
                </div><input type="submit" value="Lưu" class="btn btn-warning" style="float:right; margin-top:10px" />

            }
        </div>
    </div>
</div>
<script>
    function insertPicture() {
        $.ajax({
            type: "POST",
            url: "/Admin/AlbumPhoto/InsertPicture",
            success: function (msg) {
                console.log("aaa");
                $('#content').html(msg);
                console.log("bbb");
                document.location.reload();
            },

        });
    }
</script>