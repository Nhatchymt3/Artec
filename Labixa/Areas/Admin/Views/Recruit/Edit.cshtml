@using Outsourcing.Core
@model Labixa.Areas.Admin.ViewModel.RecruitFormModel
@{
    ViewBag.Title = "Edit";
}
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/Admin/Dashboard">Home</a>
            </li>
            <li>
                <i class="icon-edit"></i>
                <a href="/Admin/Recruit">Quản lý tuyển dụng</a>
            </li>
            <li class="active">Cập nhật tuyển dụng</li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Thêm mới tuyển dụng
            </div>
            @using (Html.BeginForm("Edit", "Recruit", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                <div class="tabbable">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">
                                <i class="green icon icon-home bigger-120"></i>
                                Nội dung
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.Title)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Title)
                                    @Html.ValidationMessageFor(model => model.Title)
                                </div>
                            </div>
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.Temp_2)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Temp_2, "GetImageFromElfinder")
                                    @Html.ValidationMessageFor(model => model.Temp_2)
                                </div>
                            </div>
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.Description)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Description)
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.Content)
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Content, "CkEditor")
                                    @Html.ValidationMessageFor(model => model.Content)
                                </div>
                            </div>
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.DayStart)
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.DayStart, "{0:yyyy-MM-dd}", new { @type = "date" })
                                    @Html.ValidationMessageFor(model => model.DayStart)
                                </div>
                            </div>
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.DayEnd)
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.DayEnd, "{0:yyyy-MM-dd}", new { @type = "date" })
                                    @Html.ValidationMessageFor(model => model.DayEnd)
                                </div>
                            </div>
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.DepartmentId)
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag.Department, "Id", "Unit"))
                                    @Html.ValidationMessageFor(model => model.DepartmentId)
                                </div>
                            </div>
                            <div class="form-group ">
                                @Html.MyLabelFor(model => model.LocationId)
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.LocationId, new SelectList(ViewBag.Location, "Id", "Address"))
                                    @Html.ValidationMessageFor(model => model.LocationId)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                @*
                    partial for group button
                *@
                @Html.Partial("_PartialButtonGroup", "/Admin/Recruit")
            }
        </div>
    </div>
</div>
